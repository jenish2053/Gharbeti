@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MiddleName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.MiddleName"></label>
                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MobileNumber" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.MobileNumber"></label>
                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="date" asp-for="Input.Dob" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.Dob"></label>
                <span asp-validation-for="Input.Dob" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.AddressLine1" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.AddressLine1"></label>
                <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.AddressLine2" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.AddressLine2"></label>
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.AddressLine3" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.AddressLine3"></label>
                <span asp-validation-for="Input.AddressLine3" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.PostalCode"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.County" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.County"></label>
                <span asp-validation-for="Input.County" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <select asp-for="Input.Country" asp-items="@Model.Input.CountryList" class="form-control">
                    <option disabled selected>-Select Country-</option>
                </select>
                <label asp-for="Input.Country"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input type="file" name="Input.IdentificationFile" id="file" /><br><br>
                <label asp-for="Input.Identification"></label>
                <span asp-validation-for="Input.IdentificationFile" class="text-danger"></span>

            </div>

            <div class="form-floating">
                <input type="file" name="Input.PhotoFile" id="file" /><br><br>
                <label asp-for="Input.PhotoId"></label>
                <span asp-validation-for="Input.PhotoId" class="text-danger"></span>
            </div>


            <div class="form-floating">
                <select asp-for="Input.HouseRoomId" asp-items="@Model.Input.RoomList" class="form-control">
                    <option disabled selected>-Select Room-</option>
                </select>
                <label asp-for="Input.HouseRoomId"></label>
                <span asp-validation-for="Input.HouseRoomId" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.StayLength" class="form-control" autocomplete="off" aria-required="true" />
                <label asp-for="Input.StayLength"></label>
                <span asp-validation-for="Input.StayLength" class="text-danger"></span>
            </div>


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

